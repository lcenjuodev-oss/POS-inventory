generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/@prisma/cloud-client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_CLOUD")
}

model Product {
  id          String        @id @default(cuid())
  name        String
  reference   String        @unique
  price       Float
  category    String
  stock       Int           @default(0)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  deleted     Boolean       @default(false)

  orderItems  OrderItem[]
  stocks      ProductStock[]
}

model Client {
  id        String   @id @default(cuid())
  name      String
  phone     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deleted   Boolean  @default(false)

  orders    Order[]
}

model Order {
  id           String      @id @default(cuid())
  externalCode String?     @unique
  status       String      @default("pending")
  totalAmount  Float       @default(0)
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  deleted      Boolean     @default(false)

  clientId     String
  client       Client      @relation(fields: [clientId], references: [id])

  items        OrderItem[]
}

model OrderItem {
  id        String   @id @default(cuid())
  quantity  Int
  price     Float

  orderId   String
  order     Order    @relation(fields: [orderId], references: [id])

  productId String
  product   Product  @relation(fields: [productId], references: [id])
}

/// Physical location where stock is stored (cloud database)
model Warehouse {
  id        String        @id @default(cuid())
  name      String
  code      String        @unique
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  stocks    ProductStock[]
}

/// Per-warehouse stock for products (cloud database)
model ProductStock {
  id          String     @id @default(cuid())
  productId   String
  warehouseId String
  quantity    Int        @default(0)

  product     Product    @relation(fields: [productId], references: [id])
  warehouse   Warehouse  @relation(fields: [warehouseId], references: [id])

  @@unique([productId, warehouseId])
}

model SyncLog {
  id        String   @id @default(cuid())
  deviceId  String
  entity    String
  entityId  String
  operation String
  payload   Json
  createdAt DateTime @default(now())
}


